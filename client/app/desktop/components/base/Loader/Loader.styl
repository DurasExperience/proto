@import './../../../../../style/common.styl'

.loader
  @extend .full
  display flex
  flex-flow row nowrap
  justify-content center
  align-items center
  z-index 99999
  background-color $BLACK
  opacity 0

  &__container
    position relative
    width 25%

  &__progress
    font-size 2rem
    text-align center
    margin-bottom 1rem
    color $WHITE
    opacity 1

  &__bar
    position absolute
    left 0
    bottom 0
    width 100%
    height 2px
    background $WHITE
    transform scaleX( 0 )
    opacity 1
