@import './../../../../../style/app.styl'

.page--layout
  position absolute
  display flex
  top 0%
  left 0%
  width 100%
  height 100%
  background-color transparent

  &__chapter
    margin auto
    justify-content center
    width 50em
    height 50%
    color $WHITE
    background-color transparent

  &__slash
    width 52px
    height 1.5px
    opacity 0.7
    margin-left 25px
    background-color $WHITE
    -ms-transform rotate(-42deg)
    -webkit-transform rotate(-42deg)
    transform rotate(-42deg)

  &__text
    margin auto
    width 100%
    height 100%
    justify-content center
    flex-direction column
    flex-wrap wrap

    h2
      font-family "AWConquerorDidot-Light"
      font-size 110px
      opacity 1
      margin-top 5%
      margin-left 0.7em

    h3
      font-family "AWConquerorDidot-Light"
      font-size 31px
      opacity 1
      margin-left 2.7em

    h4
      font-family "Didot"
      font-size 38px
      opacity 0.7

    h5
      font-family "Roboto-Regular"
      font-size 16px
      opacity 1
      width 75%
      margin-top 4%
      margin-left 23%
      line-height 31px
