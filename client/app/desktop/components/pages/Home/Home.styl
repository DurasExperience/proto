@import './../../../../../style/app.styl'

#Home
  background-color black

  .video-container
    display flex
    background-color black
    width 100%
    height 100%

    video
      justify-content center
      margin-top auto
      margin-bottom auto

  .video-skip
    z-index 10
    position absolute
    color $WHITE
    font-family "Roboto-Regular"
    font-size 12px
    text-transform uppercase
    color rgb(255, 245, 245)
    opacity 0
    width 100%
    text-align right
    bottom 80px
    right 80px

    &:hover
      cursor pointer
