@import './../../../../../style/app.styl'

.sound
  position absolute
  height 5px + $SOUNDLEVEL_TOP
  width 100px
  color $WHITE

  .bar
    margin-top $SOUNDLEVEL_TOP
    margin-left $SOUNDLEVEL_LEFT
    position absolute
    background $WHITE
    bottom 1px
    height 3px
    width 3px
    animation sound 0ms -800ms linear infinite alternate

  .bar:nth-child(1)  { left: 1px; animation-duration: 574ms; }
  .bar:nth-child(2)  { left: 9px; animation-duration: 533ms; }
  .bar:nth-child(3)  { left: 19px; animation-duration: 507ms; }
  .bar:nth-child(4)  { left: 29px; animation-duration: 558ms; }

.sound:hover
  cursor pointer

.sound:hover> .bar
  opacity 0.7
