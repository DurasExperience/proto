@import './../../../../../style/app.styl'


.navigation
  z-index 100
  position absolute
  display flex
  flex-flow column
  margin 0px 0px 0px 0px
  margin-left $MENU_RIGHT
  padding-right 500px
  height 100%
  width $MENU_WIDTH
  color $WHITE

  &__about
    margin-top: $ABOUT_TOP

    .about
      font-family "Roboto-Regular"
      font-size 14px
      text-transform uppercase
      color rgba(255, 245, 245, 1)
      text-align right

    .about:hover
      opacity 10%
      cursor pointer
      color rgba(255, 245, 245, 0.7)

  &__chapter
    margin-top auto
    margin-bottom auto
    margin-left auto
    width 30px

    &__list
      background-color green

    .chapter

      &__active
        width 45px
        height 1.5px
        background-color $WHITE
        float right
        margin-bottom 50px

      &__inactive
        width 20px
        height 2px
        background-color $WHITE
        float right
        margin-bottom 50px
        animation-name: toInactiveChapter;
        animation-duration: 0.2s;

    li
      padding 4px
      width 25px
      height 2px
      float right
      margin-bottom 50px
      background-color transparent


    li:hover
      cursor pointer

    li:hover> .navigation__item >.chapter__inactive
      cursor pointer
      animation-name: toActiveChapter;
      animation-duration: 0.2s;
      width 45px
