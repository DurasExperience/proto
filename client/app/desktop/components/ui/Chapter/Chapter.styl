@import './../../../../../style/app.styl'

.page--layout

  &__chapter
    // margin auto
    justify-content center
    width 70em
    // height 50%
    padding-bottom 10%
    color $WHITE
    background-color transparent

  &__slash
    width 52px
    height 1.5px
    opacity 0.7
    margin-left 25px
    background-color $WHITE
    -ms-transform rotate(-42deg)
    -webkit-transform rotate(-42deg)
    transform rotate(-42deg)

  &__text
    margin auto
    width 100%
    height 100%
    justify-content center
    flex-direction column
    flex-wrap wrap

    h2
      font-family "AWConquerorDidot-Light"
      font-size 110px
      opacity 1
      margin-top 5%
      margin-left 0.7em

    h3
      font-family "AWConquerorDidot-Light"
      font-size 31px
      opacity 1
      margin-left 2.7em

    h4
      font-family "Didot"
      font-size 38px
      opacity 0.7

    h5
      font-family "Roboto-Regular"
      font-size 16px
      opacity 1
      width 36em
      margin-top 4%
      margin-left 20%
      line-height 31px

  &__social
    margin-top 2%
    margin-left 20%

    a
      display inline-block
      text-decoration none
      color $WHITE
      padding 5px 0
      margin-right 60px
      position relative

      &:before
        content ''
        position absolute
        display block
        left 0
        bottom -10px
        width 55px
        height 2px
        background-color $WHITE
        transition width 0.2s $easeInOutSine

      &:hover
        &:before
          width 100%

  &__list
    display inline-block

  &__icon
    display inline-block
    padding 0 15px
