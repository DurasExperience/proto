@import './../../../../../style/common.styl'

.synchro
  @extends .full
  display flex
  flex-flow row nowrap
  justify-content center
  align-items center
  color $WHITE
  background-color $BLACK

  &__holder
    width 60em

    h2
      font-family "AWConquerorDidot-Light"
      font-size 80px
      margin-top 5%
      margin-left 0.7em
      opacity 0

    .noPhone
      display inline-block
      font-family "Roboto"
      font-size 12px
      opacity 1
      margin-left 10%
      line-height 31px
      color $WHITE
      position relative
      opacity 0

      &:after
        content ''
        display block
        position absolute
        bottom -2px
        left 0
        width 100%
        height 1px
        background-color $WHITE

    .text
      margin-top 4%
      margin-left 10%
      line-height 31px

      p
        opacity 1
        width 60%
        font-family "Roboto"
        font-size 16px
        opacity 0

      .numbers
        margin-left 61%
        transform translateY( -100% )

      input
        display inline-block
        width 40px
        height 40px
        border none
        margin-right 10px
        background-color transparentify( $WHITE, 0.05)
        color $WHITE
        font-family "Roboto"
        font-size 18px
        text-align center
        opacity 0
