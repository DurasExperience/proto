@import './../../../../../style/common.styl'

.page--home
  padding 0 10%
  box-sizing border-box

  h3
    font-size $MOBILE_TITLE_FONT_SIZE
    font-family 'Didot'
    text-align left
    width 100%
    margin-bottom 1.5rem
    opacity 0

  p
    font-weight 300
    font-size $MOBILE_FONT_SIZE
    line-height $MOBILE_LINE_HEIGHT
    opacity 0

    &.info
      padding 0 5%

    &.error
      color #FC8080
      opacity 1
      &--inactive
        display none

  .form-holder
    padding 2rem 5%
    width 100%
    box-sizing border-box

  .inputs-holder
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items center

  input
    width 25%
    height 14vh
    margin 0 5px
    box-sizing border-box
    text-align center
    background-color transparentify( $WHITE, 0.1 )
    font-size 3rem
    border none
    color $WHITE
    text-align center
    padding 0
    opacity 0

    &:first-child
      margin-left 0

    &:last-child
      margin-right 0

