@import './../../../../../style/common.styl'

.page--troubles

  .press-pointer
    position absolute
    top 50%
    left 50%
    transform translate( -50%, -50% )
    width 20vh
    height 20vh
    opacity 0

    svg
      width 100%
      height 100%

    &__bg
      opacity 0.5
      transform-origin 50% 50%

    &__inner
      transform-origin 45% 50%
