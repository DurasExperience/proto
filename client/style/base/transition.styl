@keyframes toActiveChapter {
  0% {
    width: 25px;
  }
  20% {
    width: 30px;
  }
  40% {
    width: 35px;
  }
  60% {
    width: 38px;
  }
  80% {
    width: 40px;
  }
  100% {
    width: 45px;
  }
}

@keyframes toInactiveChapter {
  0% {
    width: 45px;
  }
  20% {
    width: 40px;
  }
  40% {
    width: 38px;
  }
  60% {
    width: 35px;
  }
  80% {
    width: 30px;
  }
  100% {
    width: 25px;
  }
}


@keyframes sound {
    0% {
        height: 3px;
        opacity 1
    }
    100% {
        height: 15px;
        opacity 0.5
    }
}



@keyframes toOpacity {
  0% {
    opacity: 1;
  }
  20% {
    opacity: 0.8;
  }
  40% {
    opacity: 0.6;
  }
  60% {
    opacity: 0.4;
  }
  80% {
    opacity: 0.2;
  }
  100% {
    opacity: 0;
  }
}
