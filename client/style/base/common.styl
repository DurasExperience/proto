html
  font-size 16px
  width 100%
  height 100%

body
  width 100%
  height 100%
  overflow hidden
  background-color $BLACK
  font-family 'Farnham'

.full
  position absolute
  z-index 1
  top 0
  left 0
  width 100%
  height 100%
  background-color $BLACK

.app
  @extend .full

.main
  @extend .full
  canvas
    background-color $BLACK

.stats-js
  display none !important
  top auto !important
  bottom 0

.dg.main
  display none !important
  position absolute
  z-index 1
  height auto
  top 0
  right 0
  left auto

.video-container
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color $BLACK

  video
    width 100%